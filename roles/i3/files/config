# Determine keysym with $ xev -event keyboard

# Keybindings {{{

    # Misc {{{
bindsym Mod1+grave exec setxkbmap th
bindsym Mod1+percent exec setxkbmap us -variant mac

# Screen brightness controls
bindsym        XF86MonBrightnessUp   exec xbacklight -inc 25 # increase screen brightness
bindsym        XF86MonBrightnessDown exec xbacklight -dec 25 # decrease screen brightness
bindsym Shift+XF86MonBrightnessUp    exec xbacklight -inc  5 # increase screen brightness
bindsym Shift+XF86MonBrightnessDown  exec xbacklight -dec  5 # decrease screen brightness

# Volume controls
bindsym       XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
# raise volume with limit at 100%
bindsym       XF86AudioRaiseVolume exec $HOME/.i3/increase_volume 5
# raise volume without limit
bindsym Shift+XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym       XF86AudioMute        exec pactl set-sink-mute @DEFAULT_SINK@ toggle # amixer -q set Master toggle

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit i3 and end X-Session?' -b 'Yes, exit i3' 'i3-msg exit'"

set $mod Mod4

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Automatic back-and-forth when switching to the current workspace
workspace_auto_back_and_forth yes

# Use tab labout as default
workspace_layout tabbed
    # }}}

    # Custom {{{
# Monitor setup
bindsym $mod+Control+1 exec $HOME/dotfiles/roles/multiscreen/files/singleMonitor.sh
bindsym $mod+Control+2 exec $HOME/dotfiles/roles/multiscreen/files/doubleMonitor.sh

# rename workspace on the fly
bindsym $mod+comma exec ~/.i3/rename_workspace

# suspend screen
bindsym XF86Sleep exec systemctl suspend
bindsym $mod+F4 exec systemctl hibernate
# lock screen
bindsym $mod+m exec "i3lock --ignore-empty-password --show-failed-attempts -c 000000; sleep 1; pgrep i3lock && xset dpms force off"
bindsym $mod+b exec "sleep 1; xset dpms force off"

# screenshot
# requires pip install escrotum
bindsym control+Print exec "mv $(escrotum) ~/screenshots; notify-send 'Screenshot taken'"
bindsym $mod+Print exec "sleep1; mv $(escrotum -s) ~/screenshots; notify-send 'Screenshot taken'"
    # }}}

    # Workspaces {{{
# switch to workspace
bindsym $mod+1 workspace number 1 
bindsym $mod+2 workspace number 2 
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9 
bindsym $mod+0 workspace ""
bindsym $mod+odiaeresis workspace 11 
bindsym $mod+semicolon workspace 11 

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1 
bindsym $mod+Shift+2 move container to workspace number 2 
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9 
bindsym $mod+Shift+0 move container to workspace ""
bindsym $mod+Shift+odiaresis move container to workspace 11 
bindsym $mod+Shift+semicolon move container to workspace 11 
    # }}}

    # Windows {{{
# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# change focus
bindsym $mod+h focus left
bindsym Shift+Mod4+Tab focus left
bindsym Shift+Mod1+Tab focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym Mod4+Tab focus right
bindsym Mod1+Tab focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# move workspace to other monitor
bindsym $mod+Left move workspace to output left
bindsym $mod+Down move workspace to output down
bindsym $mod+Up move workspace to output up
bindsym $mod+Right move workspace to output right

# resize window
bindsym $mod+r mode "resize"
mode "resize" {
        bindsym h resize grow width 5 px or 5 ppt
        bindsym l resize shrink width 5 px or 5 ppt
        bindsym k resize grow height 5 px or 5 ppt
        bindsym j resize shrink height 5 px or 5 ppt

        # back to normal mode
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
    # }}}

    # Actions {{{
# start a terminal
bindsym $mod+Return exec xfce4-terminal

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
# bindsym $mod+d exec dmenu_run
bindsym $mod+d exec rofi -combi-modi window#drun#ssh -theme $HOME/.config/rofi/solarized-light -font "hack 10" -show combi

# play/pause media content
bindsym Scroll_Lock exec playerctl play-pause
    # }}}

    # Containers {{{
# split in horizontal orientation
bindsym $mod+i split h

# split in vertical orientation
bindsym $mod+minus split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split

# focus the parent container
bindsym $mod+p focus parent

# focus the child container
bindsym $mod+c focus child
    # }}}

# }}}

# Appearance {{{
font pango: FantasqueMono, FontAwesome, Bold 10

# no titlebars for i3 gaps
#for_window [class="^.*"] border pixel 0

#colors:                border  backgr. text    indicator
client.focused          #007030 #fdf6e3 #cb4b16 #2b2b2b
client.focused_inactive #888888 #fdf6e3 #657b83 #2b2b2b
client.unfocused        #888888 #eee8d5 #657b83 #2b2b2b
client.urgent           #900000 #eee8d5 #dc322f #2b2b2b

# hide borders at screen edges
hide_edge_borders both
# }}}

# set up the i3bar
bar {
  wheel_up_cmd nop
  wheel_down_cmd nop
  # requires pip install py3status
  status_command py3status -c ~/.config/i3/i3status.conf
  #status_command /usr/bin/env i3status-rs /home/zoid/.i3/status.toml
  font pango: FantasqueMono, FontAwesome, Bold 10
  separator_symbol " "

  colors {
    background #fdf6e3
    statusline #586e75
    #separator #ff0000

    #color class       border  back.   text
    focused_workspace  #859900 #859900 #eee8d5
    active_workspace   #859900 #859900 #eee8d5
    inactive_workspace #fdf6e3 #fdf6e3 #657b83
    urgent_workspace   #dc322f #dc322f #eee8d5
  }
}

# start wifi applet
exec --no-startup-id nm-applet
# set background picture
#exec --no-startup-id feh --bg-scale ~/.wallpaper
# set solarized background color
exec --no-startup-id xsetroot -solid "#fdf6e3"
# start dunst notification daemon
exec --no-startup-id dunst

